// Prisma schema for Vedic Transform - Local SQLite database
// No external dependencies - all data stored locally

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// User model for authentication
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  name          String?
  phone         String?
  avatarUrl     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  journeys           Journey[]
  dailyCheckins      DailyCheckin[]
  karmaTransactions  KarmaTransaction[]
  streaks            Streak[]
  userBadges         UserBadge[]
  gratitudeEntries   GratitudeEntry[]
  intentions         Intention[]
  manifestations     Manifestation[]
  moodLogs           MoodLog[]
  // Self-service tracking relations
  selfAssessments    SelfAssessment[]
  weeklyGoals        WeeklyGoal[]
  goalTasks          GoalTask[]
  focusPillars       FocusPillar[]
  insights           UserInsight[]
  reminderSettings   ReminderSettings?
  weeklySummaries    WeeklySummary[]
}

// The 11 transformation pillars
model Pillar {
  id                     Int      @id @default(autoincrement())
  slug                   String   @unique
  name                   String
  sanskritName           String
  description            String
  category               String   // body, mind, spirit
  icon                   String
  color                  String
  bgColor                String
  karmaPointsBase        Int      @default(10)
  defaultDurationMinutes Int      @default(0)
  sortOrder              Int      @default(0)
  isActive               Boolean  @default(true)
  createdAt              DateTime @default(now())

  // Relations
  dailyCheckins DailyCheckin[]
  focusPillars  FocusPillar[]
}

// User's 48-day journey
model Journey {
  id        String   @id @default(cuid())
  userId    String
  startDate DateTime
  endDate   DateTime?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  streaks Streak[]

  @@index([userId])
}

// Daily pillar completion tracking
model DailyCheckin {
  id              String   @id @default(cuid())
  userId          String
  pillarId        Int
  checkinDate     DateTime
  completed       Boolean  @default(false)
  durationMinutes Int?
  notes           String?
  moodBefore      Int?     // 1-5 scale
  moodAfter       Int?     // 1-5 scale
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  pillar Pillar @relation(fields: [pillarId], references: [id], onDelete: Cascade)

  @@unique([userId, pillarId, checkinDate])
  @@index([userId])
  @@index([checkinDate])
}

// Karma points transactions
model KarmaTransaction {
  id          String   @id @default(cuid())
  userId      String
  points      Int
  reason      String
  pillarId    Int?
  badgeId     String?
  createdAt   DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Streak tracking
model Streak {
  id            String   @id @default(cuid())
  userId        String
  journeyId     String
  currentStreak Int      @default(0)
  longestStreak Int      @default(0)
  lastCheckin   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  journey Journey @relation(fields: [journeyId], references: [id], onDelete: Cascade)

  @@unique([userId, journeyId])
  @@index([userId])
}

// Badge definitions
model Badge {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String
  icon        String
  color       String
  requirement String   // JSON string describing unlock criteria
  karmaBonus  Int      @default(0)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())

  // Relations
  userBadges UserBadge[]
}

// User earned badges
model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  earnedAt  DateTime @default(now())

  // Relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
}

// Gratitude journal entries
model GratitudeEntry {
  id         String   @id @default(cuid())
  userId     String
  entryDate  DateTime
  gratitude1 String?
  gratitude2 String?
  gratitude3 String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, entryDate])
  @@index([userId])
}

// Daily intentions
model Intention {
  id            String   @id @default(cuid())
  userId        String
  intentionDate DateTime
  intentionText String
  isCompleted   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, intentionDate])
  @@index([userId])
}

// Vision board / manifestations
model Manifestation {
  id          String    @id @default(cuid())
  userId      String
  title       String
  description String?
  imageUrl    String?
  isAchieved  Boolean   @default(false)
  achievedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Mood tracking logs
model MoodLog {
  id        String   @id @default(cuid())
  userId    String
  logDate   DateTime
  moodScore Int      // 1-5 scale
  energy    Int?     // 1-5 scale
  stress    Int?     // 1-5 scale
  notes     String?
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([logDate])
}

// ============================================
// SELF-SERVICE TRACKING MODELS
// ============================================

// Baseline and periodic self-assessment
model SelfAssessment {
  id                  String   @id @default(cuid())
  userId              String
  assessmentDate      DateTime
  assessmentType      String   // "baseline", "weekly", "milestone", "final"
  dayNumber           Int?     // Day in journey (1, 7, 14, 21, 28, 35, 42, 48)
  stressLevel         Int      // 1-10
  sleepQuality        Int      // 1-10
  energyLevel         Int      // 1-10
  mentalClarity       Int      // 1-10
  physicalFitness     Int      // 1-10
  emotionalStability  Int      // 1-10
  spiritualConnection Int      // 1-10
  lifeSatisfaction    Int      // 1-10
  focusLevel          Int?     // 1-10
  overallWellbeing    Int?     // 1-10
  biggestChallenge    String?
  biggestWin          String?
  oneWordFeeling      String?
  notes               String?
  createdAt           DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([assessmentType])
}

// Weekly goals settings
model WeeklyGoal {
  id              String   @id @default(cuid())
  userId          String
  weekNumber      Int      // Week 1-7 of journey
  weekStartDate   DateTime
  targetPillars   Int      // Target number of pillars per day
  focusCategory   String?  // "body", "mind", "spirit", or null for all
  weeklyIntention String?
  reflectionNotes String?
  achieved        Boolean  @default(false)
  actualAverage   Float?   // Actual average pillars per day
  completionRate  Float?   // Percentage of target achieved
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekNumber])
  @@index([userId])
}

// Individual goal tasks
model GoalTask {
  id          String    @id @default(cuid())
  userId      String
  weekNumber  Int       // Week number in journey
  title       String
  description String?
  pillarId    Int?      // Optional link to a pillar
  isCompleted Boolean   @default(false)
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([weekNumber])
}

// Focus pillars (user's top 3 priority)
model FocusPillar {
  id        String   @id @default(cuid())
  userId    String
  pillarId  Int
  priority  Int      // 1, 2, or 3
  reason    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  pillar Pillar @relation(fields: [pillarId], references: [id], onDelete: Cascade)

  @@unique([userId, pillarId])
  @@unique([userId, priority])
  @@index([userId])
}

// Automated insights
model UserInsight {
  id          String   @id @default(cuid())
  userId      String
  insightType String   // "pattern", "strength", "weakness", "recommendation", "milestone"
  category    String?  // "streak", "pillar", "mood", "consistency"
  title       String
  description String
  data        String?  // JSON data for visualization
  priority    Int      @default(0) // Higher = more important
  isRead      Boolean  @default(false)
  isDismissed Boolean  @default(false)
  expiresAt   DateTime?
  createdAt   DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
}

// Reminder settings
model ReminderSettings {
  id                   String   @id @default(cuid())
  userId               String   @unique
  // Morning reminders
  morningEnabled       Boolean  @default(true)
  morningTime          String   @default("05:00") // HH:mm format
  // Evening reminders
  eveningEnabled       Boolean  @default(true)
  eveningTime          String   @default("21:00")
  // Sandhya reminders (3x daily)
  sandhyaEnabled       Boolean  @default(false)
  sandhyaMorningTime   String   @default("06:00")
  sandhyaNoonTime      String   @default("12:00")
  sandhyaEveningTime   String   @default("18:00")
  // Streak protection
  streakWarningEnabled Boolean  @default(true)
  streakWarningTime    String   @default("20:00")
  // Email preferences
  dailyDigestEnabled   Boolean  @default(false)
  weeklyDigestEnabled  Boolean  @default(true)
  weeklyDigestDay      String   @default("sunday") // day of week
  // Notification channels
  emailNotifications   Boolean  @default(true)
  pushNotifications    Boolean  @default(false)
  // Timezone
  timezone             String   @default("UTC")
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Weekly summary snapshots (for historical data)
model WeeklySummary {
  id                  String   @id @default(cuid())
  userId              String
  weekNumber          Int
  weekStartDate       DateTime
  weekEndDate         DateTime
  totalPillarsCompleted Int
  possiblePillars     Int
  completionRate      Float
  averageMood         Float?
  averageEnergy       Float?
  streakDays          Int
  karmaEarned         Int
  topPillar           String?  // Most completed pillar
  weakestPillar       String?  // Least completed pillar
  moodTrend           String?  // "improving", "stable", "declining"
  insights            String?  // JSON array of insight strings
  createdAt           DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekNumber])
  @@index([userId])
}
