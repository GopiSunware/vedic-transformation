// Prisma schema for Vedic Transform - Local SQLite database
// No external dependencies - all data stored locally

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// User model for authentication
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  name          String?
  phone         String?
  avatarUrl     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  journeys           Journey[]
  dailyCheckins      DailyCheckin[]
  karmaTransactions  KarmaTransaction[]
  streaks            Streak[]
  userBadges         UserBadge[]
  gratitudeEntries   GratitudeEntry[]
  intentions         Intention[]
  manifestations     Manifestation[]
  moodLogs           MoodLog[]
}

// The 11 transformation pillars
model Pillar {
  id                     Int      @id @default(autoincrement())
  slug                   String   @unique
  name                   String
  sanskritName           String
  description            String
  category               String   // body, mind, spirit
  icon                   String
  color                  String
  bgColor                String
  karmaPointsBase        Int      @default(10)
  defaultDurationMinutes Int      @default(0)
  sortOrder              Int      @default(0)
  isActive               Boolean  @default(true)
  createdAt              DateTime @default(now())

  // Relations
  dailyCheckins DailyCheckin[]
}

// User's 48-day journey
model Journey {
  id        String   @id @default(cuid())
  userId    String
  startDate DateTime
  endDate   DateTime?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  streaks Streak[]

  @@index([userId])
}

// Daily pillar completion tracking
model DailyCheckin {
  id              String   @id @default(cuid())
  userId          String
  pillarId        Int
  checkinDate     DateTime
  completed       Boolean  @default(false)
  durationMinutes Int?
  notes           String?
  moodBefore      Int?     // 1-5 scale
  moodAfter       Int?     // 1-5 scale
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  pillar Pillar @relation(fields: [pillarId], references: [id], onDelete: Cascade)

  @@unique([userId, pillarId, checkinDate])
  @@index([userId])
  @@index([checkinDate])
}

// Karma points transactions
model KarmaTransaction {
  id          String   @id @default(cuid())
  userId      String
  points      Int
  reason      String
  pillarId    Int?
  badgeId     String?
  createdAt   DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Streak tracking
model Streak {
  id            String   @id @default(cuid())
  userId        String
  journeyId     String
  currentStreak Int      @default(0)
  longestStreak Int      @default(0)
  lastCheckin   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  journey Journey @relation(fields: [journeyId], references: [id], onDelete: Cascade)

  @@unique([userId, journeyId])
  @@index([userId])
}

// Badge definitions
model Badge {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String
  icon        String
  color       String
  requirement String   // JSON string describing unlock criteria
  karmaBonus  Int      @default(0)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())

  // Relations
  userBadges UserBadge[]
}

// User earned badges
model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  earnedAt  DateTime @default(now())

  // Relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
}

// Gratitude journal entries
model GratitudeEntry {
  id         String   @id @default(cuid())
  userId     String
  entryDate  DateTime
  gratitude1 String?
  gratitude2 String?
  gratitude3 String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, entryDate])
  @@index([userId])
}

// Daily intentions
model Intention {
  id            String   @id @default(cuid())
  userId        String
  intentionDate DateTime
  intentionText String
  isCompleted   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, intentionDate])
  @@index([userId])
}

// Vision board / manifestations
model Manifestation {
  id          String    @id @default(cuid())
  userId      String
  title       String
  description String?
  imageUrl    String?
  isAchieved  Boolean   @default(false)
  achievedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Mood tracking logs
model MoodLog {
  id        String   @id @default(cuid())
  userId    String
  logDate   DateTime
  moodScore Int      // 1-5 scale
  energy    Int?     // 1-5 scale
  stress    Int?     // 1-5 scale
  notes     String?
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([logDate])
}
